# ===========================================
# JobVerse 环境变量配置
# 复制此文件为 .env 后使用
# ===========================================

# 环境
NODE_ENV=development

# ===========================================
# 数据库配置
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=jobverse
POSTGRES_USER=admin
POSTGRES_PASSWORD=jobverse_password_2024
DATABASE_URL=postgresql://admin:jobverse_password_2024@postgres:5432/jobverse

# ===========================================
# Redis 配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ===========================================
# JWT 配置
# ===========================================
JWT_SECRET=jobverse_jwt_secret_key_change_in_production_2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# 服务端口配置
# ===========================================
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
JOB_SERVICE_PORT=3002
SEARCH_SERVICE_PORT=3003
REVIEW_SERVICE_PORT=3004
RISK_SERVICE_PORT=3005
AUDIT_SERVICE_PORT=3006
FRONTEND_PORT=8080

# ===========================================
# 服务间通信 URL（Docker 内部网络）
# ===========================================
USER_SERVICE_URL=http://user-service:3001
JOB_SERVICE_URL=http://job-service:3002
SEARCH_SERVICE_URL=http://search-service:3003
REVIEW_SERVICE_URL=http://review-service:3004
RISK_SERVICE_URL=http://risk-service:3005
AUDIT_SERVICE_URL=http://audit-service:3006

# ===========================================
# 前端配置
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
FRONTEND_URL=http://localhost:8080

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=debug


